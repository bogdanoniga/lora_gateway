{% extends 'layout.twig' %}

{% block body %}
    <!-- **********************************************************************************************************************************************************
    MAIN SIDEBAR MENU
    *********************************************************************************************************************************************************** -->
    <!--sidebar start-->
    <aside>
        <div id="sidebar"  class="nav-collapse ">
            <!-- sidebar menu start-->
            <ul class="sidebar-menu" id="nav-accordion">
                <li class="mt">
                    <a class="active" href="." >
                        <i class="fa fa-home"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li class="mt">
                    <a href="configs" >
                        <i class="fa fa-cogs"></i>
                        <span>Configurations</span>
                    </a>
                </li>
                <li class="mt">
                    <a href="control" >
                        <i class="fa fa-cube" aria-hidden="true"></i>
                        <span>Control Panel</span>
                    </a>
                </li>
            </ul>
            <!-- sidebar menu end-->
        </div>
    </aside>
    <!--sidebar end-->

    <!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
          <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <div class="table-header">
                        <h4 class="mb"><i class="fa fa-angle-right"></i> Home</h4>

                        <div id="auto_start">
                          <p class="auto-p">Auto Start</p>
                          <label class="switch">
                            {% if auto_start %}
                                <input type="checkbox" checked>
                            {% else %}
                                <input type="checkbox">
                            {% endif %}
                            <span class="slider round"></span>
                          </label>
                        </div>
                    </div>
                </div>
            </div><!-- col-lg-12-->
          </div>

          </div><!-- /row -->
        </section>
      </section>
{% endblock %}
